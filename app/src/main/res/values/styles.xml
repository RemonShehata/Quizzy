<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <!-- Style for layout for questions section -->
    <style name="question_root">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/question_section_margin</item>
    </style>

    <!-- Styling for questions textviews -->
    <style name="question_text_view">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-light</item>
        <item name="android:textSize">@dimen/textview_text_size</item>
        <item name="android:layout_marginBottom">@dimen/textview_margin_bottom</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Radio Buttons Styling -->
    <style name="radio_button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">@dimen/buttonPadding</item>
    </style>

    <!-- Styling for the  answers   -->
    <style name="answers">
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">
            @dimen/answer_margin
        </item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">
            @dimen/answer_margin
        </item>
        <item name="android:layout_marginTop">@dimen/answer_margin</item>
        <item name="android:textSize">@dimen/answer_textSize</item>
    </style>


    <!-- Questions Divider-->
    <style name="divider">
        <item name="android:layout_marginLeft">@dimen/divider_margin</item>
        <item name="android:layout_marginRight">@dimen/divider_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_header</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!-- Submit answers button-->
    <style name="submit_answer">
        <item name="android:textSize">@dimen/textview_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:padding">@dimen/buttonPadding</item>
    </style>


    <!-- Styles for cons layout -->
    <!-- Divider-->
    <style name="cons_divider">
        <item name="android:layout_marginStart">@dimen/cons_margin_48</item>
        <item name="android:layout_marginEnd">@dimen/cons_margin_48</item>
        <item name="android:layout_marginTop">@dimen/cons_margin_8</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!-- Styling for questions textviews -->
    <style name="cons_question">
        <item name="android:textSize">@dimen/cons_question_textSize</item>
        <item name="android:layout_marginStart">@dimen/cons_margin_16</item>
        <item name="android:layout_marginEnd">@dimen/cons_margin_16</item>
        <item name="android:layout_marginTop">@dimen/cons_margin_16</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Styling for questions EditText -->
    <style name="cons_editText">
        <item name="android:inputType">textCapWords</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:ems">10</item>
        <item name="android:importantForAutofill" tools:targetApi="o">no</item>
    </style>

    <!-- Styling for submit answers button-->
    <style name="cons_submitAnswersButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/cons_margin_16</item>
        <item name="android:layout_marginEnd">@dimen/cons_margin_16</item>
        <item name="android:layout_marginTop">@dimen/cons_margin_16</item>
        <item name="android:layout_marginBottom">@dimen/cons_margin_16</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textSize">@dimen/cons_submit_answers_text_size</item>

    </style>

</resources>
